<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/classic_img"
            android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:id="@+id/classic_title"
            android:layout_below="@+id/classic_img"
            tools:text="Title goes here"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/classic_subtitle"
            android:layout_below="@+id/classic_title"
            tools:text="Subtitle  here"/>

    <RelativeLayout android:layout_width="match_parent" android:id="@+id/action_container"
                  android:orientation="horizontal"
                  android:layout_marginTop="16dp"
                  android:layout_below="@+id/classic_subtitle"
                  android:layout_marginBottom="16dp"
                  android:layout_height="wrap_content">
        <Button
                android:text="Button"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/button"/>
        <Button
                android:text="Button"
                android:layout_toRightOf="@+id/button"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"/>
        <ImageButton
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:id="@+id/imageButton"/>
    </RelativeLayout>


    <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="24dp"
            android:text="content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classic_brief"
            android:layout_below="@+id/action_container"/>
</RelativeLayout>
