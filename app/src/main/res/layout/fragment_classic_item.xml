<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardUseCompatPadding="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/classic_img"
                android:layout_alignParentTop="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:id="@+id/classic_title"
                android:layout_below="@+id/classic_img"
                tools:text="Title goes here"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/classic_subtitle"
                android:layout_below="@+id/classic_title"
                tools:text="Subtitle  here"/>

        <RelativeLayout android:layout_width="match_parent" android:id="@+id/action_container"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/classic_subtitle"
                        android:layout_height="wrap_content">
            <TextView
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:text="SHARE"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/button"/>
            <TextView
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:text="COLLECTION"
                    android:layout_toRightOf="@+id/button"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_expand_more_black_24dp"
                    android:id="@+id/imageButton"/>
        </RelativeLayout>


        <TextView
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:textSize="14sp"
                android:text="content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/classic_brief"
                android:layout_below="@+id/action_container"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>